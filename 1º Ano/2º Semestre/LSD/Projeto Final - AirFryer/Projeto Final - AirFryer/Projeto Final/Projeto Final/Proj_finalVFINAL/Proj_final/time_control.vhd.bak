library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity time_control is
    port (
        clk       : in std_logic;
        reset     : in std_logic;
        run       : in std_logic;
        time_up   : in std_logic;
        time_down : in std_logic;
        current_time: out integer range 0 to 60 -- Tempo m√°ximo de 60 minutos
    );
end entity;

architecture behavioral of time_control is
    signal time : integer range 0 to 60 := 0; -- Tempo inicial
begin
    process(clk, reset)
    begin
        if reset = '1' then
            time <= 0; -- Reset do tempo
        elsif rising_edge(clk) then
            if run = '1' then
                if time < 60 then
                    time <= time + 1; -- Incrementa o tempo
                end if;
            end if;

            if time_up = '1' then
                if time < 60 then
                    time <= time + 1; -- Aumenta tempo
                end if;
            elsif time_down = '1' then
                if time > 0 then
                    time <= time - 1; -- Diminui tempo
                end if;
            end if;
        end if;
    end process;

    current_time <= time;
end architecture;
