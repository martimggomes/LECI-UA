library IEEE;
use IEEE.STD_LOGIC_1164.all;


entity ProgramSelector is
    Port (
        SW : in STD_LOGIC_VECTOR(1 downto 0);
        HEX0 : out STD_LOGIC_VECTOR(6 downto 0)
    );
end ProgramSelector;

architecture Behavioral of ProgramSelector is
begin
      process(SW)
      begin
        if SW = "00" then
            HEX0 <= "1001111"; --para mostrar o número 1
        elsif SW = "01" then
            HEX0 <= "0010010"; -- para mostrar o número 2
        elsif SW = "10" then
            HEX0 <= "0000110"; -- para mostrar o número 3
        elsif SW = "11" then
            HEX0 <= "1001100"; -- para mostrar o número 4
        else
            HEX0 <= "1111111"; -- desliga tudo se meter uma condição não especificada
        end if;
		end process;
end Behavioral;
